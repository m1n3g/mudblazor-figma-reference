@page "/components/paper"
@using MudBlazor

<MudGrid GutterSize="GutterSize.Small">
    <!-- Controls -->
    <MudItem xs="12" md="4">
        <MudPaper Class="pa-5">
            <MudText Typo="Typo.h6" Class="mb-2">MudPaper Controls</MudText>

            <MudSwitch Color="Color.Primary" @bind-Value="outlined">Outlined</MudSwitch>
            <MudSwitch Color="Color.Primary" @bind-Value="square">Square</MudSwitch>

            <MudNumericField T="int" Label="Elevation" @bind-Value="elevation" Min="0" Max="25" Immediate Class="mt-2" />

            <MudTextField Label="Width (CSS)" @bind-Value="width" Placeholder="e.g. 300px or 100%" Immediate Class="mt-2" />

            <MudStack Row Spacing="1" Class="mt-4">
                <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => width = "300px")">300px</MudButton>
                <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => width = "100%")">100%</MudButton>
                <MudButton Variant="Variant.Outlined" Size="Size.Small" OnClick="@(() => width = null)">Auto</MudButton>
            </MudStack>
        </MudPaper>
    </MudItem>

    <!-- Live preview -->
    <MudItem xs="12" md="8">
        <MudPaper Outlined="@outlined"
                  Square="@square"
                  Elevation="@elevation"
                  Width="@width"
                  Class="pa-8 d-flex justify-center align-center ma-2">
            <MudText Typo="Typo.subtitle1">
                Preview â€” Outlined: <b>@outlined</b>, Square: <b>@square</b>,
                Elevation: <b>@elevation</b>, Width: <b>@(width ?? "auto")</b>
            </MudText>
        </MudPaper>
    </MudItem>
</MudGrid>


@code {
    // Defaults
    private bool outlined = false;
    private bool square = false;
    private int elevation = 1;   // default is 1 as requested
    private string? width = "300px"; // any CSS width; set to null for auto
}
