@page "/components/switch"
@using MudBlazor

<MudGrid GutterSize="GutterSize.Small">

    <!-- Controls -->
    <MudItem xs="12" md="4" lg="3">
        <MudPaper Class="pa-5">
            <MudText Typo="Typo.h6" Class="mb-2">Switch Controls</MudText>

            <MudSelect T="Color" Label="Color" Dense @bind-Value="_color">
                <MudSelectItem Value="Color.Default" />
                <MudSelectItem Value="Color.Primary" />
                <MudSelectItem Value="Color.Secondary" />
                <MudSelectItem Value="Color.Info" />
                <MudSelectItem Value="Color.Success" />
                <MudSelectItem Value="Color.Warning" />
                <MudSelectItem Value="Color.Error" />
                <MudSelectItem Value="Color.Dark" />
            </MudSelect>

            <MudSelect T="Size" Label="Size" Dense Class="mt-2" @bind-Value="_size">
                <MudSelectItem Value="Size.Small" />
                <MudSelectItem Value="Size.Medium" />
                <MudSelectItem Value="Size.Large" />
            </MudSelect>

            <MudDivider Class="my-3" />

            <MudSwitch Color="Color.Primary" @bind-Value="_useThumbIcon">Use thumb icon</MudSwitch>
            <MudSelect T="string" Label="Thumb icon" Dense Class="mt-2"
                       @bind-Value="_thumbIcon" Disabled="@(!_useThumbIcon)">
                <MudSelectItem Value="@Icons.Material.Filled.PowerSettingsNew">Power</MudSelectItem>
                <MudSelectItem Value="@Icons.Material.Filled.Check">Check</MudSelectItem>
                <MudSelectItem Value="@Icons.Material.Filled.Favorite">Heart</MudSelectItem>
                <MudSelectItem Value="@Icons.Material.Filled.Star">Star</MudSelectItem>
                <MudSelectItem Value="@Icons.Material.Filled.Lightbulb">Lightbulb</MudSelectItem>
                <MudSelectItem Value="@Icons.Material.Filled.Wifi">Wifi</MudSelectItem>
            </MudSelect>

            <MudDivider Class="my-3" />

            <!-- Toggles (apply to live switch) -->
            <MudSwitch Color="Color.Primary" @bind-Value="_readOnly">Read only</MudSwitch>
            <MudSwitch Color="Color.Primary" @bind-Value="_disabled">Disabled</MudSwitch>
        </MudPaper>
    </MudItem>

    <!-- Content placement -->
    <MudItem xs="12" md="8" lg="9">
        <MudPaper Class="pa-5">
            <MudText Typo="Typo.h6" Class="mb-2">Content Placement</MudText>

            <MudRadioGroup T="Placement" Color="Color.Primary"
                           @bind-Value="_labelPlacement">
                <MudStack>
                    <MudRadio T="Placement" Value="Placement.Top"    Label="Top" />
                    <MudRadio T="Placement" Value="Placement.Bottom" Label="Bottom" />
                    <MudRadio T="Placement" Value="Placement.Start"  Label="Start" />
                    <MudRadio T="Placement" Value="Placement.End"    Label="End" />
                    <MudRadio T="Placement" Value="Placement.Left"   Label="Left" />
                    <MudRadio T="Placement" Value="Placement.Right"  Label="Right" />
                </MudStack>
            </MudRadioGroup>

            <MudDivider Class="my-4" />

            <!-- Live preview -->
            <MudSwitch T="bool"
                       Color="@_color"
                       Size="@_size"
                       ReadOnly="@_readOnly"
                       Disabled="@_disabled"
                       ThumbIcon="@(_useThumbIcon ? _thumbIcon : null)"
                       @bind-Value="_demoValue"
                       LabelPlacement="@_labelPlacement">
                Content Placement
            </MudSwitch>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    // appearance
    private Color _color = Color.Default;
    private Size _size = Size.Medium;

    // behavior
    private bool _readOnly;
    private bool _disabled;   // <--- NEW

    // thumb icon
    private bool _useThumbIcon;
    private string _thumbIcon = Icons.Material.Filled.PowerSettingsNew;

    // live value
    private bool _demoValue;

    // label placement
    private Placement _labelPlacement = Placement.Right;
}