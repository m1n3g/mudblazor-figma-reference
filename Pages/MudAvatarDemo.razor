        <MudAvatar Color="Color.Success" Variant="Variant.Outlined">K</MudAvatar>
        <MudAvatar Color="Color.Warning" Variant="Variant.Outlined">J</MudAvatar>

    </MudAvatarGroup>


    <MudAvatarGroup Max="@max" Spacing="@spacing" MaxColor="Color.Primary">
        <MudAvatar>
            <MudImage Src="images/jonny.jpg" />
        </MudAvatar>
        <MudAvatar>
            <MudImage Src="images/mony.jpg" />
        </MudAvatar>
        <MudAvatar>
            <MudImage Src="images/toiletvisit.jpg" />
        </MudAvatar>
