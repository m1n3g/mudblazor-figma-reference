@page "/components/radio"

<!-- Controls -->
<MudPaper Class="pa-3 mb-3" Elevation="25">
    <MudStack Spacing="2">

        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudSelect T="Color" Label="Color" @bind-Value="_color" Dense="true">
                    @foreach (Color c in Enum.GetValues(typeof(Color)))
                    {
                        <MudSelectItem Value="@c">@c</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>

            <MudItem xs="12" sm="6">
                <MudSelect T="Size" Label="Size" @bind-Value="_size" Dense="true">
                    <MudSelectItem Value="@Size.Small">Small</MudSelectItem>
                    <MudSelectItem Value="@Size.Medium">Medium</MudSelectItem>
                    <MudSelectItem Value="@Size.Large">Large</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>

        <MudStack Row Spacing="2" Class="align-center">
            <MudSwitch Color="Color.Primary" @bind-Value="_dense" Label="Dense" />
            <MudSwitch Color="Color.Primary" @bind-Value="_disableGroup" Label="Disable group" />
        </MudStack>

        <!-- Content (label) placement -->
        <MudText Typo="Typo.subtitle2">Content (Label) placement</MudText>
        <MudRadioGroup T="Placement" @bind-Value="_placement">
            <MudRadio T="Placement" Value="Placement.Top">Top</MudRadio>
            <MudRadio T="Placement" Value="Placement.Bottom">Bottom</MudRadio>
            <MudRadio T="Placement" Value="Placement.Start">Start (Left)</MudRadio>
            <MudRadio T="Placement" Value="Placement.End">End (Right)</MudRadio>
        </MudRadioGroup>

    </MudStack>
</MudPaper>

<!-- Preview -->
<MudPaper Class="pa-3 mb-3" Elevation="25">
    <MudText Typo="Typo.subtitle1" Class="mb-2" Style="font-weight:600;">Preview</MudText>

    <MudStack Spacing="2">

        <!-- Group 1 -->
        <MudText Typo="Typo.subtitle2">Choose one</MudText>
        <MudRadioGroup T="string" @bind-Value="_choice1">
            <MudRadio T="string"
                      Value="@("Default")"
                      Label="Default"
                      Color="_color"
                      Size="_size"
                      Dense="_dense"
                      Disabled="_disableGroup"
                      LabelPlacement="_placement" />

            <MudRadio T="string"
                      Value="@("Primary")"
                      Label="Primary"
                      Color="Color.Primary"
                      Size="_size"
                      Dense="_dense"
                      Disabled="_disableGroup"
                      LabelPlacement="_placement" />

            <MudRadio T="string"
                      Value="@("Secondary")"
                      Label="Secondary (Start/Left)"
                      Color="Color.Secondary"
                      Size="_size"
                      Dense="_dense"
                      Disabled="_disableGroup"
                      LabelPlacement="Placement.Start" />

            <MudRadio T="string"
                      Value="@("DisabledItem")"
                      Label="Disabled item"
                      Color="_color"
                      Size="_size"
                      Dense="_dense"
                      Disabled="true"
                      LabelPlacement="_placement" />
        </MudRadioGroup>

        <MudText Typo="Typo.body2">Selected: @_choice1</MudText>

        <MudDivider Class="my-2" />

        <!-- Group 2 (horizontal) -->
        <MudText Typo="Typo.subtitle2">Horizontal group</MudText>
        <MudRadioGroup T="string" @bind-Value="_choice2" Row="true">
            <MudRadio T="string" Value="@("A")" Label="Option A" Color="_color" Size="_size" Dense="_dense" Disabled="_disableGroup" LabelPlacement="_placement" />
            <MudRadio T="string" Value="@("B")" Label="Option B" Color="_color" Size="_size" Dense="_dense" Disabled="_disableGroup" LabelPlacement="_placement" />
            <MudRadio T="string" Value="@("C")" Label="Option C" Color="_color" Size="_size" Dense="_dense" Disabled="_disableGroup" LabelPlacement="_placement" />
        </MudRadioGroup>
        <MudText Typo="Typo.body2">Selected: @_choice2</MudText>

    </MudStack>
</MudPaper>

@code {
    // Controls
    private Color _color = Color.Default;
    private Size _size = Size.Medium;
    private bool _dense = false;
    private bool _disableGroup = false;
    private Placement _placement = Placement.End; // default Right

    // Selections
    private string _choice1 = "Default";
    private string _choice2 = "A";
}
