@page "/components/tooltip"
@using MudBlazor

<MudTooltip Text="Delete">
    <MudIconButton Class="mr-3" Icon="@Icons.Material.Filled.Delete" />
</MudTooltip>

<MudTooltip Text="Add">
    <MudFab Class="mr-3" StartIcon="@Icons.Material.Filled.Add" Color="Color.Secondary" />
</MudTooltip>

<MudTooltip Text="Arrow Left" Arrow="true" Placement="Placement.Left">
    <MudButton Class="mr-3">Arrow Left</MudButton>
</MudTooltip>

<MudTooltip Text="Arrow Top" Arrow="true" Placement="Placement.Top">
    <MudButton Class="mr-3">Arrow Top</MudButton>
</MudTooltip>

<MudTooltip Text="Arrow Bottom" Arrow="true" Placement="Placement.Bottom">
    <MudButton Class="mr-3">Arrow Bottom</MudButton>
</MudTooltip>

<MudTooltip Text="Arrow Right" Arrow="true" Placement="Placement.Right">
    <MudButton Class="mr-3">Arrow Right</MudButton>
</MudTooltip>

<MudTooltip Text="Secondary" Color="Color.Secondary" Placement="Placement.Top">
    <MudButton Class="mr-3">Secondary</MudButton>
</MudTooltip>

<MudTooltip Text="Tertiary" Color="Color.Tertiary" Placement="Placement.Bottom" Arrow="true">
    <MudButton Class="mr-3">Tertiary</MudButton>
</MudTooltip>

<MudTooltip Text="Primary" Color="Color.Primary" Placement="Placement.Top">
    <MudButton Class="mr-3">Primary</MudButton>
</MudTooltip>
