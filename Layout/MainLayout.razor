@inherits LayoutComponentBase 

<MudLayout> <!-- Top AppBar -->
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-2">MudPlayground</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar> <!-- Sidebar Drawer -->
    <MudDrawer @bind-Open="_drawerOpen" Variant="DrawerVariant.Responsive" Elevation="1" Width="260px"
        MiniVariantWidth="72px" Anchor="Anchor.Start" MobileBreakpoint="Breakpoint.Md">
        <MudDrawerHeader>
            <MudText Typo="Typo.subtitle1">Navigation</MudText>
        </MudDrawerHeader> <!-- Call the NavMenu component -->
        <NavMenu />
    </MudDrawer> <!-- Page content -->
    <MudMainContent Class="pa-4"> 
        @Body 
    </MudMainContent>
</MudLayout> 

@code {
private bool _drawerOpen = true; void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}