@inherits LayoutComponentBase

<MudLayout>
    <!-- Top AppBar -->
    <MudAppBar Elevation="1" Color="Color.Primary" Fixed="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="ToggleDrawer" />
        <MudText Typo="Typo.h6" Class="ml-2">MudPlayground</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Href="https://github.com/m1n3g/mudblazor-figma-reference"
            Color="Color.Inherit" Target="_blank" Rel="noopener noreferrer" />
    </MudAppBar>

    <!-- Sidebar Drawer -->
    <MudDrawer @bind-Open="_drawerOpen" Variant="DrawerVariant.Persistent" Elevation="1" Width="260px"
        MiniVariantWidth="72px" Anchor="Anchor.Start" Breakpoint="Breakpoint.Md">
        <MudDrawerHeader>
            <MudText Typo="Typo.subtitle1">Navigation</MudText>
        </MudDrawerHeader> <!-- Call the NavMenu component -->
        <NavMenu />
    </MudDrawer>

    <!-- Page content -->
    <MudMainContent Class="pt-20 px-7">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true; void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}